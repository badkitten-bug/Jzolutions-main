---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Página Demo de nuestro CRM / ERP',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="ERP / CRM"
    title="Construye tu propio CRM / ERP"
    subtitle="Crea tu propio sistema de gestión de clientes y recursos empresariales con Jzolutions"
    actions={[
      { variant: 'primary', text: 'Veamos el CRM/ERP', href: 'https://srv543770.hstgr.cloud', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Learn more', href: '#' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1486312338219-ce68d2c6f44d?q=80&w=2072&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Magnet attracting screws. Lead generation landing page demo',
    }}
  />

  <CallToAction
    title="Cada día estamos trabajando en mejorar nuestros servicios"
    subtitle="Estamos felices de nuestro producto, tienes algún sistema en excel pues pasate a este software y centraliza!"
    actions={[
      {
        variant: 'primary',
        text: 'Download Template',
        href: 'https://github.com/badkitten-bug/Jzolutions-main',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
